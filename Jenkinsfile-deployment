pipeline {
    agent { label 'mars' }
    parameters {
        string(name: 'build-bumber', defaultValue: '')
    }
    stages {  
        // stage('Add helm repo') {
        //     steps {
        //         sh 'helm repo add amjed https://amjedsaleel.github.io/helm-charts/'
        //     }
        // }
        stage('Blue version') {
            steps {
                withKubeConfig(credentialsId: '7f7d1279-32c0-40eb-90ae-78bcdfebf101', serverUrl: '') {
                    script {
                        // def buildNumber = Jenkins.instance.getItem('Django hello build').lastSuccessfulBuild.number
                        echo "${params.build-bumber}"
                        try {
                            sh "helm upgrade staging --set image.tag=${params.build-bumber} amjed/django-hello"
                        }
                        catch (err) {
                            sh "helm install staging --set image.tag=${params.build-bumber} amjed/django-hello"
                        }
                    }
                }
            }
        }
        stage('Green version') {
            steps {
                withKubeConfig(credentialsId: '7f7d1279-32c0-40eb-90ae-78bcdfebf101', serverUrl: '') {
                    script {
                        def buildNumber = Jenkins.instance.getItem('Django hello build').lastSuccessfulBuild.number
                        echo "${buildNumber}"
                        try {
                            sh "helm upgrade production --set image.tag=${params.build-bumber} amjed/django-hello"
                        }
                        catch (err) {
                            sh "helm install production --set image.tag=${params.build-bumber} amjed/django-hello"
                        }
                    }
                }
            }
        }
    }
}
