pipeline {
    agent { label 'mars' }
    parameters {
        string(name: 'HHH', description: 'build number')
    }
    stages {  
        // stage('Add helm repo') {
        //     steps {
        //         sh 'helm repo add amjed https://amjedsaleel.github.io/helm-charts/'
        //     }
        // }
        stage('Blue version') {
            steps {
                withKubeConfig(credentialsId: '7f7d1279-32c0-40eb-90ae-78bcdfebf101', serverUrl: '') {
                    script {
                        // def buildNumber = Jenkins.instance.getItem('Django hello build').lastSuccessfulBuild.number
                        echo "${params.HHH}"
                        try {
                            sh "helm upgrade staging --set image.tag=${params.HHH} amjed/django-hello"
                        }
                        catch (err) {
                            sh "helm install staging --set image.tag=${params.HHH} amjed/django-hello"
                        }
                    }
                }
            }
        }
        stage('Green version') {
            steps {
                withKubeConfig(credentialsId: '7f7d1279-32c0-40eb-90ae-78bcdfebf101', serverUrl: '') {
                    script {
                        // def buildNumber = Jenkins.instance.getItem('Django hello build').lastSuccessfulBuild.number
                        echo "${params.BUILD-NUMBER}}"
                        try {
                            sh "helm upgrade production --set image.tag=${params.BUILD-NUMBER}} amjed/django-hello"
                        }
                        catch (err) {
                            sh "helm install production --set image.tag=${params.BUILD-NUMBER}} amjed/django-hello"
                        }
                    }
                }
            }
        }
    }
}
